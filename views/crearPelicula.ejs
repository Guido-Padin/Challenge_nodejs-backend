<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Pelicula</title>
</head>
<body>
    <h1>Formulario de creacion de pelicula</h1>
    <br>
    <form action="/pelicula/guardar" method="POST">
        <fieldset>
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo">
        </fieldset>
        <fieldset>
            <label for="rating">Rating:</label>
            <input type="number" name="rating">
        </fieldset>
        <fieldset>
            <label for="premios">Premios:</label>
            <input type="number" name="premios">
        </fieldset>
        <fieldset>
            <label for="fechaDeEstreno">Fecha de estreno:</label>
            <input type="date" name="fechaDeEstreno">
        </fieldset>
        <fieldset>
            <label for="duracion">Duracion de la pelicula (en minutos):</label>
            <input type="number" name="duracion">
        </fieldset>
        <fieldset>
            <label for="genero">Genero:</label>
            <% generos.forEach(genero => { %>
                <input type= "radio" name="genero" value="<%= genero.id %>"><%= genero.name %>
            <% }) %>
        </fieldset>
        <fieldset>
            <label for="actores">Reparto:</label>
            <br>
            <% actores.forEach(actor => { %>
                <input type= "checkbox" name="actores" value="<%= actor.id%>"><%= actor.first_name + " " + actor.last_name %>
                <br>
            <% }) %>
        </fieldset>
        <fieldset>
            <button type="submit">Crear</button>
            <button type="reset">Resetear</button>
        </fieldset>
    </form>
    
</body>
</html>